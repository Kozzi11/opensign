package org.openoces.opensign.client.applet.attach;

/**
 * This class implements an extended scroll-pane setting a sensible preferred size
 *
 * @author Preben Rosendal Valeur  <prv@tdc.dk>
 */

import java.awt.*;

public class ScrollPanePlusPrefSize extends ScrollPane {
	private static final long serialVersionUID = 6472647920853062879L;

	protected static final int EXTRA_PANE_PIXELS = 10;
    protected Component comp; // only expects one component - todo: flag error if not
    public Component add(Component comp) {
        this.comp = comp;
        return super.add(comp);
    }
    public Dimension getPreferredSize(){
        if (comp == null){
            return super.getPreferredSize();
        } else {
            Dimension prefSize = comp.getPreferredSize();
            prefSize.height += EXTRA_PANE_PIXELS;
            prefSize.width += EXTRA_PANE_PIXELS;
            return prefSize;
        }
    }
}
