package org.openoces.opensign.client.applet.attach;

/**
 * This class implements a dialog style attachment-list view
 *
 * @author Preben Rosendal Valeur  <prv@tdc.dk>
 * @author Paw F. Kjeldgaard <pakj@danid.dk>
 */

import org.openoces.opensign.client.applet.CallBackHandler;
import org.openoces.opensign.client.applet.attach.dialogs.AttachmentListPanel;
import org.openoces.opensign.client.applet.dialogs.AbstractDialog;
import org.openoces.opensign.client.applet.dialogs.panel.AbstractPanel;

import javax.swing.*;

public class AttachmentListViewDialog extends AbstractDialog implements AttachmentListView {
    private AttachmentListPanel panel;
    private AttachmentImpl[] attachments;

    AttachmentListViewDialog(CallBackHandler owner, final JComponent oldFocusComponent) {
        super(owner, oldFocusComponent, 750, 250);
    }

    public void setAttachments(AttachmentImpl[] attachments) {
        this.attachments = attachments.clone();
    }

    public AttachmentImpl[] getAttachments() {
        return attachments;
    }

    public void showAttachments() {
        show();
    }

    @Override
    protected void initialize() {
        if(panel == null) panel = new AttachmentListPanel(callBackHandler, this);
    }

    @Override
    protected AbstractPanel getPanel() {
        return panel;
    }
}