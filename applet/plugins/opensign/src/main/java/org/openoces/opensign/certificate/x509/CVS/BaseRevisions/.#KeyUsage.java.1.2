package org.openoces.opensign.certificate.x509;

/**
 * This class represents the keyusage element as specified by the X.509 format
 *
 * @author Jens Bo Friis  <jbf@it-practice.dk>
 */
public class KeyUsage {
    private boolean digitalSignature;
    private boolean nonRepudiation;
    private boolean keyEncipherment;
    private boolean dataEncipherment;
    private boolean keyAgreement;
    private boolean keyCertSign;
    private boolean keyCRLSign;

    public KeyUsage(boolean digitalSignature,
                    boolean nonRepudiation,
                    boolean keyEncipherment,
                    boolean dataEncipherment,
                    boolean keyAgreement,
                    boolean keyCertSign,
                    boolean keyCRLSign) {
        this.digitalSignature = digitalSignature;
        this.nonRepudiation = nonRepudiation;
        this.keyEncipherment = keyEncipherment;
        this.dataEncipherment = dataEncipherment;
        this.keyAgreement = keyAgreement;
        this.keyCertSign = keyCertSign;
        this.keyCRLSign = keyCRLSign;
    }

    public boolean includesDigitalSignature() {
        return digitalSignature;
    }

    public boolean includesNonRepudiation() {
        return nonRepudiation;
    }

    public boolean includesKeyEncipherment() {
        return keyEncipherment;
    }

    public boolean includesDataEncipherment() {
        return dataEncipherment;
    }

    public boolean includesKeyAgreement() {
        return keyAgreement;
    }

    public boolean includesKeyCertSign() {
        return keyCertSign;
    }

    public boolean includesKeyCRLSign() {
        return keyCRLSign;
    }
}
