package org.openoces.opensign.client.applet.dialogs.panel;

import javax.swing.*;
import java.awt.*;

public class FixedSizePanel extends JPanel {
    private int fixedWidth = 8;
	private int fixedHeight = 8;

	public FixedSizePanel() {
		super( new FlowLayout( FlowLayout.RIGHT ) );
		setOpaque( false );
		setPreferredSize( new Dimension( fixedWidth, fixedHeight ) );
		setSize( new Dimension( fixedWidth, fixedHeight ) );
		setMaximumSize( new Dimension( fixedWidth, fixedHeight ) );
		setMinimumSize( new Dimension( fixedWidth, fixedHeight ) );
	}

	public FixedSizePanel( int fixedWidth, int fixedHeight ) {
		this();
		this.fixedHeight = fixedHeight;
		this.fixedWidth = fixedWidth;
		setPreferredSize( new Dimension( fixedWidth, fixedHeight ) );
		setSize( new Dimension( fixedWidth, fixedHeight ) );
		setMaximumSize( new Dimension( fixedWidth, fixedHeight ) );
		setMinimumSize( new Dimension( fixedWidth, fixedHeight ) );
	}

	public int getWidth() {
		return fixedWidth;
	}

	public int getHeight() {
		return fixedHeight;
	}

	public Dimension getPreferredSize() {
		return new Dimension( fixedWidth, fixedHeight );
	}

	public boolean isFocusable() {
		return false;
	}

	public Dimension getSize() {
		return new Dimension( fixedWidth, fixedHeight );
	}
}
