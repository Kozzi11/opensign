import org.openoces.opensign.client.applet.CallBackHandler;
import org.openoces.opensign.client.applet.dialogs.panel.AbstractPanel;
import org.openoces.opensign.client.applet.dialogs.panel.ConfirmPanel;

import javax.swing.*;

public class DlgConfirm extends AbstractDialog {
    private ConfirmPanel panel;
    private String title;
    private String confirmationMsg;

    public DlgConfirm(CallBackHandler callBackHandler, final JComponent oldFocusComponent, String title, String confirmationMsg) {
        super(callBackHandler, oldFocusComponent, 300, 120);
        this.title = title;
        this.confirmationMsg = confirmationMsg;
    }

    public DlgConfirm(AbstractDialog parent, final JComponent oldFocusComponent, String title, String confirmationMsg) {
        super(parent, oldFocusComponent, 400, 120);
        this.title = title;
        this.confirmationMsg = confirmationMsg;
    }

    @Override
    protected void initialize() {
        if(panel == null) panel = new ConfirmPanel(callBackHandler, this, title, confirmationMsg);
    }

    @Override
    protected AbstractPanel getPanel() {
        return panel;
    }

    public boolean isCancelled() {
        return panel.isCancelled();
    }
}