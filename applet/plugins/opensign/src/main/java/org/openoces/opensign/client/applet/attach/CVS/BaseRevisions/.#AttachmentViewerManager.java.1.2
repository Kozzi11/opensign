package org.openoces.opensign.client.applet.attach;

/**
 * This class manages attachment viewers  
 *
 * @author Preben Rosendal Valeur  <prv@tdc.dk>
 */

import org.openoces.opensign.utils.FileLog;

import java.util.HashMap;
import java.util.Map;

public class AttachmentViewerManager {
    private static Map<String, AttachmentViewer> viewerRegister = new HashMap<String, AttachmentViewer>();

    protected AttachmentViewerManager() {
    }

    // todo: consider registering class names and instantiate lazily.
    public static void registerViewer(String mimeType, AttachmentViewer viewer) {
        FileLog.debug("Registering viewer for MIME type: " + mimeType);
        viewerRegister.put(mimeType, viewer);
    }

    public static boolean hasViewer(String mimeType) {
        return (getViewer(mimeType) != null);
    }

    public static AttachmentViewer getViewer(String mimeType) {
        FileLog.debug("Getting viewer for MIME type: " + mimeType);
        return viewerRegister.get(mimeType);
    }


}
