/**
 * This class represent a dialog displaying certificate details
 *
 * @author Carsten Raskgaard  <carsten@raskgaard.dk>
 * @author Preben Rosendal Valeur  <prv@tdc.dk>
 * @author Paw F. Kjeldgaard
 */

import org.openoces.opensign.certificate.CertificateHandler;
import org.openoces.opensign.client.applet.CallBackHandler;
import org.openoces.opensign.client.applet.dialogs.panel.AbstractPanel;
import org.openoces.opensign.client.applet.dialogs.panel.CertificateDetailsPanel;

import javax.swing.*;

public class DlgCertificateDetails extends AbstractDialog {
    private final static int WIDTH = 700;
    private final static int HEIGHT = 250;

    private CertificateDetailsPanel panel;
    private CertificateHandler certificate;
    private String title;

    public DlgCertificateDetails(CallBackHandler callBackHandler, JComponent oldFocusComponent, String title, CertificateHandler certificate) {
        super(callBackHandler, oldFocusComponent, WIDTH, HEIGHT);
        this.certificate = certificate;
        this.title = title;
    }

    public DlgCertificateDetails(AbstractDialog dialog, JComponent oldFocusComponent, String title, CertificateHandler certificate) {
        super(dialog, oldFocusComponent, WIDTH, HEIGHT);
        this.certificate = certificate;
        this.title = title;
    }

    /**
     * initialize gui.
     */
    protected void initialize() {
        if(panel == null) panel = new CertificateDetailsPanel(callBackHandler, this, title, certificate);
    }

    @Override
    protected AbstractPanel getPanel() {
        return panel;
    }


}