import org.openoces.opensign.client.applet.CallBackHandler;

import javax.swing.*;

public interface AttachmentSupport extends AppletSupport {
    public void init(CallBackHandler parent, String attachmentParam, String userHomeDir, JComponent oldFocusComponent);
    public void show(CallBackHandler parent);

    public Attachment [] getAttachments();

    /**
     * Returns if it is ok to sign in the current state, ie. if check if all mandatory attachments have been
     * viewed or saved locally.
     *
      * @return whether it is ok to sign in the current state with respect to the attachments
     */

    public boolean isSigningOK(JComponent oldFocusComponent);
}