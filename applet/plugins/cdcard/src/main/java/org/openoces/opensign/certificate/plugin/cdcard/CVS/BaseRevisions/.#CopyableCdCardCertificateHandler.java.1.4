import org.openoces.opensign.certificate.CopyableItem;
import org.openoces.opensign.client.applet.dialogs.AbstractDialog;
import org.openoces.opensign.client.applet.dialogs.DlgInformation;
import org.openoces.opensign.utils.FileLog;

import javax.swing.*;
import java.io.File;

public class CopyableCdCardCertificateHandler extends CdCardCertificateHandler implements CopyableItem {
    protected CopyableCdCardCertificateHandler(CdCardKeyStoreHandler handler, String dirPath) throws Exception {
        super(handler, dirPath);
    }

    // copy the item from the default place to a user selected place
    public final void backup(AbstractDialog dialog, JComponent oldFocusComponent) {
        //To change body of implemented methods use File | Settings | File Templates.
        // todo: implement
        DlgInformation dlgInfo = new DlgInformation(dialog, oldFocusComponent, "info", "NYI: Certifikatet bliver kopieret til et sted du kan vælge");
        dlgInfo.show();
    }

    // delete from the default place
    public void delete(AbstractDialog dialog, JComponent oldFocusComponent) {
        DlgInformation dlgInfo = new DlgInformation(dialog, oldFocusComponent, "info", "NYI: Certifikatet bliver kopieret til et sted du kan vælge");
        dlgInfo.show();

        // delete the files ... and myself...
        File certFile = new File(filePath);
        if (!certFile.delete()){
            FileLog.error("Error deleting file "+certFile.getAbsolutePath());
        }
        handler.forgetScan();
    }
}