public class DefaultCertificateHandlerFactory implements CertificateHandlerFactory {
    private MicrosoftCapiFactory factory;

    public DefaultCertificateHandlerFactory(MicrosoftCapiFactory factory) {
        this.factory = factory;
    }

    @Override
    public MicrosoftWindowsCertificateHandler createCertificateHandler(byte[][] r) {
        return new MicrosoftWindowsCertificateHandler(r, factory.createMicrosoftCapi());
    }
}
