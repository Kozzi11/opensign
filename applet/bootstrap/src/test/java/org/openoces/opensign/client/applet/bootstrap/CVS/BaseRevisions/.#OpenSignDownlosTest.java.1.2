package org.openoces.opensign.client.applet.bootstrap;

import junit.framework.Assert;
import org.junit.Test;

import java.util.List;

/**
 * @author Paw Figg√© Kjeldgaard (pfk@miracleas.dk)
 */
public class OpenSignDownlosTest {

    @Test
    public void getDownloadItems() {
        List<DownloadItem> downloadItems = OpenSignDownloads.getDownloadItems();
        Assert.assertNotNull(downloadItems);
        Assert.assertNotNull(getDownloadItem("OpenSign", downloadItems));
        Assert.assertNotNull(getDownloadItem("OpenLogon", downloadItems));
        Assert.assertNotNull(getDownloadItem("OpenService", downloadItems));
        Assert.assertNotNull(getDownloadItem("capi", downloadItems));
        Assert.assertNotNull(getDownloadItem("cdcard", downloadItems));
        Assert.assertNotNull(getDownloadItem("pkcs12", downloadItems));
        Assert.assertNotNull(getDownloadItem("oces", downloadItems));
        Assert.assertNotNull(getDownloadItem("cryptoki", downloadItems));
        Assert.assertNotNull(getDownloadItem("attachment", downloadItems));
        Assert.assertNotNull(getDownloadItem("pdf", downloadItems));
    }

    private DownloadItem getDownloadItem(String alias, List<DownloadItem> downloadItems) {
        for (DownloadItem item : downloadItems) {
            if (item.getAlias().equals(alias)) {
                return item;
            }
        }
        return null;
    }
}
