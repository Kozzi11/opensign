package org.openoces.opensign.demo.servlets;

import org.openoces.opensign.demo.utils.Base64;
import org.springframework.web.multipart.commons.CommonsMultipartFile;

import java.util.ArrayList;
import java.util.List;

/**
 * @author Paw Figgé Kjeldgaard (pfk@miracleas.dk)
 */
public class Opensign extends AbstractAppletParameters {
    private String agreement;

    private CommonsMultipartFile fileData;
    private CommonsMultipartFile agreementPdfFileData;

    private String event;

    private String format;
    private String xslt;
    private String xsltId;

    private List<Attachment> attachments = new ArrayList<Attachment>();
    private String attachmentXml;

    private Pdf pdf;

    public String getFormat() {
        return format;
    }

    public void setFormat(String format) {
        this.format = format;
    }

    public String getAgreement() {
        return agreement;
    }

    public String getBase64Agreement() {
        return Base64.base64Encode(agreement);
    }

    public void setAgreement(String agreement) {
        this.agreement = agreement;
    }

    public String getXslt() {
        return xslt;
    }

    public String getBase64Xslt() {
        return Base64.base64Encode(xslt);
    }

    public void setXslt(String xslt) {
        this.xslt = xslt;
    }

    public String getXsltId() {
        return xsltId;
    }

    public void setXsltId(String xsltId) {
        this.xsltId = xsltId;
    }

    public CommonsMultipartFile getFileData() {
        return fileData;
    }

    public void setFileData(CommonsMultipartFile fileData) {
        this.fileData = fileData;
    }

    public List<Attachment> getAttachments() {
        return attachments;
    }

    public void addAttachment(Attachment attachment) {
        attachments.add(attachment);
    }

    public String getAttachmentXml() {
        return attachmentXml;
    }

    public String getBase64AttachmentXml() {
        return attachmentXml != null ? Base64.base64Encode(attachmentXml) : null;
    }

    public void setAttachmentXml(String attachmentXml) {
        this.attachmentXml = attachmentXml;
    }

    public String getEvent() {
        return event;
    }

    public void setEvent(String event) {
        this.event = event;
    }

    public CommonsMultipartFile getAgreementPdfFileData() {
        return agreementPdfFileData;
    }

    public void setAgreementPdfFileData(CommonsMultipartFile agreementPdfFileData) {
        this.agreementPdfFileData = agreementPdfFileData;
    }

    public Pdf getPdf() {
        return pdf;
    }

    public void setPdf(Pdf pdf) {
        this.pdf = pdf;
    }
}