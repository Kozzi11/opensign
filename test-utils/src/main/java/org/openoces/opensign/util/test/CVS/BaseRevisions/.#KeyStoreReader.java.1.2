package org.openoces.opensign.util.test;

import java.security.KeyStore;

/**
 * @author Paw Figg√© Kjeldgaard (pfk@miracleas.dk)
 */
public class KeyStoreReader {

    public static KeyStore readKeyStore(String resourcePath, String password) {
        try {
            KeyStore keyStore = KeyStore.getInstance("JKS");
            keyStore.load(KeyStoreReader.class.getResourceAsStream(resourcePath), password.toCharArray());
            return keyStore;
        } catch (Exception e) {
            throw new RuntimeException(e);
        }

    }

}
